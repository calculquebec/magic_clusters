# https://yamllint.readthedocs.io/en/stable/configuration.html#default-configuration
extends: default

yaml-files:
  - '*.yaml'
  - '*.yml'
  - '.yamllint'

# https://yamllint.readthedocs.io/en/stable/rules.html
rules:
  line-length:
    max: 120
    level: warning

  document-start:
    present: false
